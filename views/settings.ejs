            --primary-dark: #4752C4;
            --secondary: #EB459E;
            --success: #3BA55D;
            --danger: #ED4245;
            --warning: #FAA81A;
            --info: #57F287;
            --dark: #1a1a2e;
            --darker: #16213e;
            --sidebar: #0f1419;
            --card-bg: rgba(255, 255, 255, 0.05);
            --text-light: #ffffff;
            --text-gray: #b9bbbe;
            --gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-2: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            --settings-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
