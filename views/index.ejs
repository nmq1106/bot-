                </a>
                <a href="#" class="social-link">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>
            <p>¬© 2024 Queen Premium Bot. Made with ‚ù§Ô∏è by Queen Team</p>
            <p style="opacity: 0.7; margin-top: 10px; font-size: 0.9em;">
                Phi√™n b·∫£n 6.0 | Auto-Delete Technology | Premium Features
            </p>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        // Bi·∫øn l∆∞u tr·ªØ d·ªØ li·ªáu hi·ªán t·∫°i
        let currentStats = {
            serverCount: <%= botStats.serverCount %>,
            userCount: <%= botStats.userCount %>,
            uptime: '<%= botStats.uptime %>',
            features: <%= JSON.stringify(botStats.features) %>
        };

        // Particles.js Configuration
        particlesJS('particles-js', {
            particles: {
                number: { value: 100, density: { enable: true, value_area: 800 } },
                color: { value: "#ffffff" },
                shape: { type: "circle" },
                opacity: { value: 0.5, random: true },
                size: { value: 3, random: true },
                line_linked: {
                    enable: true,
                    distance: 150,
                    color: "#ffffff",
                    opacity: 0.4,
                    width: 1
                },
                move: {
                    enable: true,
                    speed: 3,
                    direction: "none",
                    random: true,
                    straight: false,
                    out_mode: "out",
                    bounce: false
                }
            },
            interactivity: {
                detect_on: "canvas",
                events: {
                    onhover: { enable: true, mode: "repulse" },
                    onclick: { enable: true, mode: "push" },
                    resize: true
                }
            },
            retina_detect: true
        });

        // Create floating elements
        const floatingContainer = document.getElementById('floating-elements');
        for (let i = 0; i < 15; i++) {
            const element = document.createElement('div');
            element.classList.add('floating-element');
            element.style.left = `${Math.random() * 100}%`;
            element.style.animationDelay = `${Math.random() * 15}s`;
            element.style.width = `${20 + Math.random() * 40}px`;
            element.style.height = element.style.width;
            floatingContainer.appendChild(element);
        }

        // GSAP Animations
        gsap.registerPlugin(ScrollTrigger);

        // Header animation
        gsap.from('.header h1', { duration: 1.2, y: -80, opacity: 0, ease: 'bounce.out' });
        gsap.from('.logo', { duration: 1, scale: 0, rotation: 360, ease: 'back.out(1.7)' });

        // Scroll animations
        gsap.utils.toArray('.reveal').forEach(element => {
            gsap.fromTo(element, {
                opacity: 0,
                y: 50
            }, {
                opacity: 1,
                y: 0,
                duration: 1,
                scrollTrigger: {
                    trigger: element,
                    start: "top 80%",
                    end: "bottom 20%",
                    toggleActions: "play none none reverse"
                }
            });
        });

        // H√†m c·∫≠p nh·∫≠t s·ªë li·ªáu v·ªõi animation
        function animateNumberChange(elementId, newValue, duration = 1000) {
            const element = document.getElementById(elementId);
            const oldValue = parseInt(element.textContent.replace(/,/g, '')) || 0;
            const startTime = performance.now();

            function updateNumber(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                // Easing function for smooth animation
                const easeOutQuart = 1 - Math.pow(1 - progress, 4);
                const currentValue = Math.floor(oldValue + (newValue - oldValue) * easeOutQuart);
                
                element.textContent = currentValue.toLocaleString();

                if (progress < 1) {
                    requestAnimationFrame(updateNumber);
                }
            }

            requestAnimationFrame(updateNumber);
        }

        // H√†m c·∫≠p nh·∫≠t th·ªùi gian ho·∫°t ƒë·ªông
        function updateUptime(newUptime) {
            const uptimeElement = document.getElementById('uptime');
            gsap.to(uptimeElement, {
                duration: 0.5,
                opacity: 0,
                y: -10,
                onComplete: () => {
                    uptimeElement.textContent = newUptime;
                    gsap.to(uptimeElement, {
                        duration: 0.5,
                        opacity: 1,
                        y: 0
                    });
                }
            });
        }

        // H√†m refresh d·ªØ li·ªáu - KH√îNG reload trang
        async function refreshData() {
            const refreshBtn = document.getElementById('refreshBtn');
            refreshBtn.classList.add('loading');
            
            try {
                // Th√™m hi·ªáu ·ª©ng loading cho stats cards
                gsap.to('.stat-card', { 
                    duration: 0.3, 
                    scale: 0.95,
                    opacity: 0.8 
                });

                // G·ªçi API ƒë·ªÉ l·∫•y d·ªØ li·ªáu m·ªõi
                const response = await fetch('/api/stats');
                const newData = await response.json();

                // C·∫≠p nh·∫≠t d·ªØ li·ªáu v·ªõi animation
                if (newData.serverCount !== currentStats.serverCount) {
                    animateNumberChange('serverCount', newData.serverCount);
                }
                if (newData.userCount !== currentStats.userCount) {
                    animateNumberChange('userCount', newData.userCount);
                }
                if (newData.uptime !== currentStats.uptime) {
                    updateUptime(newData.uptime);
                }

                // C·∫≠p nh·∫≠t bi·∫øn currentStats
                currentStats = { ...currentStats, ...newData };

                // Kh√¥i ph·ª•c animation cho cards
                gsap.to('.stat-card', { 
                    duration: 0.3, 
                    delay: 0.2,
                    scale: 1,
                    opacity: 1 
                });

                // Hi·ªÉn th·ªã th√¥ng b√°o th√†nh c√¥ng
                showNotification('D·ªØ li·ªáu ƒë√£ ƒë∆∞·ª£c c·∫≠p nh·∫≠t!', 'success');
                
            } catch (error) {
                console.error('L·ªói khi c·∫≠p nh·∫≠t d·ªØ li·ªáu:', error);
                showNotification('Kh√¥ng th·ªÉ c·∫≠p nh·∫≠t d·ªØ li·ªáu', 'error');
            } finally {
                refreshBtn.classList.remove('loading');
            }
        }

        // H√†m hi·ªÉn th·ªã th√¥ng b√°o
        function showNotification(message, type = 'info') {
            // T·∫°o element th√¥ng b√°o
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 30px;
                right: 30px;
                padding: 20px 25px;
                background: ${type === 'success' ? 'var(--success)' : 'var(--danger)'};
                color: white;
                border-radius: 15px;
                z-index: 10000;
                box-shadow: 0 10px 30px rgba(0,0,0,0.3);
                transform: translateX(400px);
                transition: transform 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
                backdrop-filter: blur(20px);
                border: 1px solid rgba(255,255,255,0.1);
                min-width: 300px;
            `;
            
            notification.innerHTML = `
                <div style="display: flex; align-items: center; gap: 15px;">
                    <i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-exclamation-circle'}" style="font-size: 1.3em;"></i>
                    <div>
                        <div style="font-weight: 600; margin-bottom: 5px;">${type === 'success' ? 'Th√†nh c√¥ng' : 'L·ªói'}</div>
                        <div style="font-size: 0.9em; opacity: 0.9;">${message}</div>
                    </div>
                </div>
            `;
            
            document.body.appendChild(notification);
            
            // Hi·ªáu ·ª©ng xu·∫•t hi·ªán
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            // T·ª± ƒë·ªông ·∫©n sau 5 gi√¢y
            setTimeout(() => {
                notification.style.transform = 'translateX(400px)';
                setTimeout(() => {
                    if (document.body.contains(notification)) {
                        document.body.removeChild(notification);
                    }
                }, 400);
            }, 5000);
        }

        // Event listeners
        document.getElementById('refreshBtn').addEventListener('click', refreshData);

        // Add hover effects
        document.querySelectorAll('.stat-card, .feature-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                gsap.to(card, { duration: 0.3, scale: 1.03, ease: 'power2.out' });
            });
            card.addEventListener('mouseleave', () => {
                gsap.to(card, { duration: 0.3, scale: 1, ease: 'power2.out' });
            });
        });

        // Loading animation completion
        setTimeout(() => {
            document.querySelector('.loading-bar').style.display = 'none';
        }, 2000);

        // Add reveal class to elements for scroll animation
        document.querySelectorAll('.stat-card, .feature-card, .auto-delete-status, .section-title').forEach(el => {
            el.classList.add('reveal');
        });

        // T·ª± ƒë·ªông c·∫≠p nh·∫≠t d·ªØ li·ªáu m·ªói 30 gi√¢y (t√πy ch·ªçn)
        setInterval(refreshData, 30000);

        // C·∫≠p nh·∫≠t khi trang tr·ªü l·∫°i visible (tab ƒë∆∞·ª£c active)
        document.addEventListener('visibilitychange', function() {
            if (!document.hidden) {
                refreshData();
            }
        });

        // NgƒÉn ch·∫∑n h√†nh vi m·∫∑c ƒë·ªãnh c·ªßa c√°c form (n·∫øu c√≥)
        document.addEventListener('submit', function(e) {
            e.preventDefault();
        });
    </script>
</body>
