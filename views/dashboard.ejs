        // Enhanced API Functions - Ch·ªâ c·∫≠p nh·∫≠t d·ªØ li·ªáu, kh√¥ng reload trang
        async function refreshStats() {
            const btn = event.target.closest('.btn');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<div class="loading"></div>';
            btn.disabled = true;
            
            try {
                // Add loading animation to stats cards
                gsap.to('.stat-card', { scale: 0.95, duration: 0.3 });
                
                const response = await fetch('/api/stats');
                const data = await response.json();
                
                // C·∫≠p nh·∫≠t bi·∫øn to√†n c·ª•c
                currentStats = data;
                
                // Animate number changes
                animateNumberChange('serverCount', data.serverCount);
                animateNumberChange('userCount', data.userCount);
                document.getElementById('uptime').textContent = data.uptime;
                animateNumberChange('pendingDeletions', data.autoDeleteStats ? data.autoDeleteStats.scheduled : 0);
                
                // C·∫≠p nh·∫≠t tr·∫°ng th√°i auto-delete
                updateAutoDeleteStatus(data.autoDeleteStats ? data.autoDeleteStats.enabled : false);
                
                // Restore card animation
                gsap.to('.stat-card', { scale: 1, duration: 0.3, delay: 0.2 });
                
                showNotification('Stats updated successfully!', 'success');
            } catch (error) {
                console.error('Error refreshing stats:', error);
                showNotification('Error updating stats', 'error');
            } finally {
                btn.innerHTML = '<i class="fas fa-sync-alt"></i> Refresh Data';
                btn.disabled = false;
            }
        }

        function updateAutoDeleteStatus(isEnabled) {
            const btn = document.getElementById('toggleAutoDelete');
            if (isEnabled) {
                btn.classList.remove('btn-danger');
                btn.classList.add('btn-success');
                btn.innerHTML = '<i class="fas fa-power-off"></i> DISABLE';
            } else {
                btn.classList.remove('btn-success');
                btn.classList.add('btn-danger');
                btn.innerHTML = '<i class="fas fa-power-off"></i> ENABLE';
            }
        }

        function animateNumberChange(elementId, newValue) {
            const element = document.getElementById(elementId);
            const oldValue = parseInt(element.textContent) || 0;
            const duration = 1000;
            const startTime = performance.now();

            function updateNumber(currentTime) {
                const elapsed = currentTime - startTime;
                const progress = Math.min(elapsed / duration, 1);
                
                const currentValue = Math.floor(oldValue + (newValue - oldValue) * progress);
                element.textContent = currentValue.toLocaleString();

                if (progress < 1) {
                    requestAnimationFrame(updateNumber);
                }
            }

            requestAnimationFrame(updateNumber);
        }

        async function toggleAutoDelete() {
            const btn = document.getElementById('toggleAutoDelete');
            const originalText = btn.innerHTML;
            btn.innerHTML = '<div class="loading"></div>';
            btn.disabled = true;
            
            try {
                // Add pulse animation
                btn.classList.add('pulse');
                
                // G·ªçi API ƒë·ªÉ toggle auto-delete
                const response = await fetch('/api/autodelete/toggle', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
